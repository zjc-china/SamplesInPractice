{
  "compilerOptions": {
      "baseUrl": ".",
      "incremental": true,
      "paths": {
          "*": [
              "types/*"
          ]
      },
      "outDir": "./dist",
      "module": "commonjs",
      "sourceMap": true,
      "noImplicitAny": true,
      "resolveJsonModule": true,
      "target": "es2017",
      "allowJs": true,
      "strict": false
  },
  "include": [
      "./src/**/*.ts",
      "./src/**/*.js"
  ]
}